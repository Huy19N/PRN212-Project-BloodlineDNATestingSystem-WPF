<UserControl x:Class="WpfApp.Views.AdminCustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Search -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                VerticalAlignment="Top"
                Grid.Column="0">
                <fa:IconImage Icon="Search" Height="20" Width="20" Foreground="{StaticResource color1}"/>
                <TextBox x:Name="txtSearch"
                         Text="Search..." 
                         FontSize="13" 
                         Height="24" Width="300"
                         Background="Transparent"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                            
                         Foreground="{StaticResource color1}"
                         CaretBrush="{StaticResource color1}"
                         BorderBrush="{StaticResource color1}"
                         BorderThickness="0,0,0,1"                             
                         VerticalContentAlignment="Center"
                         Margin="5,5,0,0"/>
            </StackPanel>
            <Button x:Name="btnSearch"
                    Grid.Column="1"                            
                    Content="Search"            
                    FontSize="12"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    BorderThickness="0"
                    Foreground="White"
                    VerticalAlignment="Top" Click="btnSearch_Click"
                    Style="{StaticResource btnInLVStyle}"
                    Background="{StaticResource buttonColor1}"
                    Tag="{StaticResource buttonHoverColor1}"
                    Margin="10,0,10,0">
            </Button>
        </Grid>

        <!-- User Table -->
        <Border Grid.Row="1"
        Background="{StaticResource panelColor}"
        CornerRadius="10" 
        Padding="10"
        Margin="0,0,0,5">
            <ListView x:Name="lvUser"
              Background="Transparent"
              BorderThickness="0"
              ItemsSource="{Binding User}">
                <!-- Style header cho GridView -->
                <ListView.Resources >
                    <Style TargetType="GridViewColumnHeader" BasedOn="{StaticResource lvGridViewColumnHeaderStyle}"/>
                </ListView.Resources>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" BasedOn="{StaticResource lvItemStyle}"/>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView >
                        <GridViewColumn Header="UserId" DisplayMemberBinding="{Binding UserId}" />
                        <GridViewColumn Header="RoleName" DisplayMemberBinding="{Binding Role.RoleName}" />
                        <GridViewColumn Header="FullName" DisplayMemberBinding="{Binding FullName}" />
                        <GridViewColumn Header="IdentifyId" DisplayMemberBinding="{Binding IdentifyId}" />
                        <GridViewColumn Header="Address" DisplayMemberBinding="{Binding Address}" />
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" />
                        <GridViewColumn Header="Phone" DisplayMemberBinding="{Binding Phone}" />
                        <GridViewColumn Header="Edit">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="30" Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Edit"
                                    Style="{StaticResource btnInLVStyle}"
                                    Tag="{StaticResource buttonHoverColor5}">
                                        <fa:IconImage Icon="PenToSquare"
                                      Style="{StaticResource btnIconLVStyle}"/>
                                    </Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <!-- Total Record, Show records per page, Prev Next -->
        <Border Grid.Row="2"
        Background="{StaticResource panelColor}" 
        CornerRadius="8"
        Padding="10,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Records, page -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                    <TextBlock Text="Total:"
               Foreground="{StaticResource titleColor3}"
               FontFamily="{StaticResource Montserrat}"
               FontSize="13"
               VerticalAlignment="Center"
               Margin="0,0,8,0"/>
                    <TextBlock x:Name="txbNumberRecords"
               Foreground="{StaticResource titleColor3}"
               FontFamily="{StaticResource Montserrat}"
               FontSize="13"
               VerticalAlignment="Center"
               Margin="0,0,8,0"/>
                    <TextBlock Text="records"
               Foreground="{StaticResource titleColor3}"
               FontFamily="{StaticResource Montserrat}"
               FontSize="13"
               VerticalAlignment="Center"
               Margin="0,0,16,0"/>

                    <TextBlock Text="Show"
               Foreground="{StaticResource titleColor3}"
               FontFamily="{StaticResource Montserrat}"
               FontSize="13"
               VerticalAlignment="Center"
               Margin="0,0,4,0"/>
                    <ComboBox x:Name="cmbRecordsPerPage"
                        Width="60"
                        Height="28"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Montserrat}"
                        FontSize="20"
                        SelectedIndex="0"
                        Background="{StaticResource panelOverColor}"
                        Foreground="Black"
                        BorderBrush="{x:Null}"
                        Margin="0,0,4,0">
                        <ComboBoxItem Content="10" />
                        <ComboBoxItem Content="20"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                        <ComboBoxItem Content="200"/>
                    </ComboBox>
                    <TextBlock Text="per page"
                       Foreground="{StaticResource titleColor2}"
                       FontFamily="{StaticResource Montserrat}"
                       FontSize="13"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" >
                    <Button x:Name="btnPrev"
                    Content="Prev"
                    Width="70"
                    Height="30"
                    FontFamily="{StaticResource Montserrat}"
                    FontSize="13"
                    FontWeight="Bold"
                    Foreground="{StaticResource titleColor1}"
                    Background="{StaticResource buttonColor3}"
                    Tag="{StaticResource buttonHoverColor3}"
                    BorderThickness="0"
                    Margin="0,0,4,0"
                    Cursor="Hand"
                    Style="{StaticResource btnInLVStyle}"/>
                    <TextBlock x:Name="txbCurrentPage"
                       Foreground="{StaticResource titleColor3}"
                       FontFamily="{StaticResource Montserrat}"
                       FontSize="13"
                       VerticalAlignment="Center"
                       Margin="0,0,2,0"/>
                    <TextBlock Text="/"
                       Foreground="{StaticResource titleColor3}"
                       FontFamily="{StaticResource Montserrat}"
                       FontSize="13"
                       VerticalAlignment="Center"
                       Margin="0,0,2,0"/>
                    <TextBlock x:Name="txbMaxPage"
                       Foreground="{StaticResource titleColor3}"
                       FontFamily="{StaticResource Montserrat}"
                       FontSize="13"
                       VerticalAlignment="Center"
                       Margin="0,0,4,0"/>
                    <Button x:Name="btnNext"
                    Content="Next"
                    Width="70"
                    Height="30"
                    FontFamily="{StaticResource Montserrat}"
                    FontSize="13"
                    Foreground="{StaticResource titleColor1}"
                    Background="{StaticResource buttonColor2}"
                    Tag="{StaticResource buttonHoverColor2}"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Style="{StaticResource btnInLVStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
