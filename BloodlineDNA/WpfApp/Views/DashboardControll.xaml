<UserControl x:Class="WpfApp.Views.DashboardControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WpfApp.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="800">

    <Grid Background="#1E0B40" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Thống kê" Foreground="White" FontSize="24" FontWeight="Bold"
                   Margin="10"/>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Tổng số User và Booking -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <Border Background="#3E0F80" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Tổng số người dùng" FontSize="18" Foreground="White"/>
                        <TextBlock Text="{Binding TotalUsers}" FontSize="28" FontWeight="Bold" Foreground="Cyan"/>
                    </StackPanel>
                </Border>
                <Border Background="#3E0F80" CornerRadius="10" Padding="20" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Tổng số Đã Đặt chỗ" FontSize="18" Foreground="White"/>
                        <TextBlock Text="{Binding TotalBookings}" FontSize="28" FontWeight="Bold" Foreground="Orange"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Biểu đồ Pie -->
            <Border Grid.Column="1" Background="#3E0F80" CornerRadius="10" Padding="20" Margin="10,0,0,0">
                <lvc:PieChart Series="{Binding PieSeries}" LegendLocation="Right" Foreground="White"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
