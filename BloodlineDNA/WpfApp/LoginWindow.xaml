<Window x:Class="WpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">


    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/images/bglogin.jpg"
                        Stretch="None"/>
        </Border.Background>
        <Border CornerRadius="10"
                BorderThickness="1"
                Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="LOGIN"
                           Foreground="DarkGray"
                           FontSize="10"
                           FontFamily="Arial"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10, 0, 0, 0"/>

                <Button x:Name="btnMaximize"
                                BorderThickness="0"
                                Grid.Column="1"
                                Click="btnMaximize_Click"
                                Tag="{StaticResource maximizeWindowControlColor}"
                                Style="{StaticResource windowControlButton}">
                    <fa:IconImage Icon="WindowMaximize"
                                  Height="10"
                                  Foreground="White"/>
                </Button>

                <Button x:Name="btnMinimize"
                        BorderThickness="0"
                        Grid.Column="2"
                        Click="btnMinimize_Click"
                        Tag="{StaticResource minimizeWindowControlColor}"
                        Style="{StaticResource windowControlButton}">
                    <fa:IconImage Icon="Minus" 
                                  Width="10"
                                  Foreground="White"/>
                </Button>

                <Button x:Name="btClose"
                        BorderThickness="0"
                        Grid.Column="3"
                        Click="btClose_Click"
                        Tag="{StaticResource closeWindowControlColor}"
                        Style="{StaticResource windowControlButton}">
                    <fa:IconImage Icon="Close" 
                                  Width="10"
                                  Foreground="White"/>
                </Button>

                <StackPanel Width="250" 
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="4"
                            Orientation="Vertical"
                            Margin="0,35,0,0">
                    <Image Source="/Images/user-icon.png"
                           Width="100" Height="100"/>
                    <TextBlock Text="GENCARE"
                             Foreground="White"                       
                             FontFamily="{StaticResource Montserrat}"
                             FontSize="25"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Please Login to use us system!"
                               Foreground="LightGray"
                               FontSize="12"
                               FontFamily="{StaticResource Montserrat}"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>

                    <TextBlock Text="UserName"
                               FontSize="12"
                               FontFamily="{StaticResource Montserrat}"
                               Foreground="Gray"
                               Margin="0,35,0,0"/>

                    <TextBox x:Name="txtUserName"
                             FontSize="13"
                             FontFamily="{StaticResource Montserrat}"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="pack://application:,,,/Images/user-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>


                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Password"
                               FontSize="12"
                               FontFamily="{StaticResource Montserrat}"
                               Foreground="Gray"
                               Margin="0,15,0,0"/>

                    <PasswordBox x:Name="txtPassword"
                             FontSize="13"
                             FontFamily="{StaticResource Montserrat}"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0">
                        <PasswordBox.Background>
                            <ImageBrush ImageSource="pack://application:,,,/Images/key-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>

                    <Button x:Name="btLogin"
                            BorderThickness="0"
                            Content="LOGIN"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Arial"
                            Grid.Column="2"
                            Click="btLogin_Click"
                            Margin="0,25,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#442AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                        <TextBlock Text="ForgetPassword"
                                   Foreground="Gray"
                                   FontSize="12"
                                   FontFamily="{StaticResource Montserrat}"/>

                        <TextBlock Text="Register"
                                   Foreground="LightGray"
                                   FontSize="12"
                                   FontFamily="{StaticResource Montserrat}"
                                   Cursor="Hand"
                                   Margin="8,0,0,0" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                                   />

                        <TextBlock Text="Reset"
                                   Foreground="LightGray"
                                   FontSize="12"
                                   FontFamily="{StaticResource Montserrat}"
                                   Cursor="Hand"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                    
                </StackPanel>
                
            </Grid>
        </Border>
    </Border>
</Window>
