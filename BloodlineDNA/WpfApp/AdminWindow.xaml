<Window x:Class="WpfApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        >

    <Border CornerRadius="10"
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Nav Bar-->
                <ColumnDefinition Width="250"/>
                
                <ColumnDefinition Width="*"/>
                
            </Grid.ColumnDefinitions>

            
            <!-- Nav Menu-->
            <Border CornerRadius="10, 0, 0, 10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <!-- Logo -->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0 40">
                        <Image Source="/Images/Icon.png"/>
                        <TextBlock Text="Manager Panel" 
                                   Foreground="{StaticResource titleColor1}"
                                   FontFamily="{StaticResource Montserrat}"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>            
                    </StackPanel>
                    <!-- Menu -->
                    <!-- Dashboard -->
                    <StackPanel>
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color1}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}"/>
                            </StackPanel> 
                        </RadioButton>
                    </StackPanel>
                    <!-- Customer -->
                    <StackPanel>
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color2}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Users" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Customers" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                    <!-- Booking -->
                    <StackPanel>
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color3}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="CalendarCheck" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Booking" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                    <!-- Payment -->
                    <StackPanel>
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color4}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="MoneyBill" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Payment" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Main -->
            <Border CornerRadius="0, 10, 10, 0"
                    Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Controll bar -->
                        <RowDefinition Height="35"/>
                        <!-- Header / Caption -->
                        <RowDefinition Height="35"/>
                        <!-- Content -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Controll bar -->
                    <StackPanel x:Name="ControlBar"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Grid.Row="0"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="ControlBar_MouseLeftButtonDown">

                        <Button x:Name="btnClose"
                                BorderThickness="0"
                                Click="btnClose_Click"
                                Tag ="{StaticResource closeWindowControlColor}"
                                Style="{StaticResource windowControlButton}"
                                Margin="0,0,5,0">
                            <fa:IconImage Icon="Xmark" 
                                          Height="10"
                                          Foreground="White"/>
                        </Button>


                        <Button x:Name="btnMinimize"
                                BorderThickness="0"
                                Click="btnMinimize_Click"
                                Style="{StaticResource windowControlButton}"
                                Tag="{StaticResource minimizeWindowControlColor}"
                                Margin="0,0,5,0">
                            <fa:IconImage Icon="Minus" 
                                          Width="10"
                                          Foreground="White"/>
                        </Button>

                        <Button x:Name="btnMaximize"
                                BorderThickness="0"
                                Click="btnMaximize_Click"
                                Tag="{StaticResource maximizeWindowControlColor}"
                                Style="{StaticResource windowControlButton}">
                            <fa:IconImage Icon="WindowMaximize"
                                          Height="10"
                                          Foreground="White"/>
                        </Button>
                        
                        
                    </StackPanel>
                </Grid>
                
            </Border>


        </Grid>
        
        
    </Border>
</Window>
