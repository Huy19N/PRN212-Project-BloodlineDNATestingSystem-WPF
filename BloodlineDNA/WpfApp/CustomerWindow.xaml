<Window x:Class="WpfApp.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Title="CustomerWindow" Height="450" Width="800">
    
    <Border BorderThickness="1"
            CornerRadius="10">
        
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Nav -->
                <ColumnDefinition MaxWidth="250"/>
                <!-- Main -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Nav -->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                        
                    </LinearGradientBrush>
                </Border.Background>
                
                <!--TabBar-->
                
            </Border>

            <!-- Main -->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Control bar -->
                        <RowDefinition Height="35"/>
                        <!-- Header -->
                        <RowDefinition Height="35"/>
                        <!-- Content -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Control bar -->
                    <StackPanel x:Name="ControlBar"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Grid.Row="0"
                                Margin="0,0,5,0"
                                Background="Transparent"
                                MouseLeftButtonDown="ControlBar_MouseLeftButtonDown">

                        <Button x:Name="btnClose"
                                BorderThickness="0"
                                Click="btnClose_Click"
                                Tag ="{StaticResource closeWindowControlColor}"
                                Style="{StaticResource windowControlButton}"
                                Margin="0,0,5,0">           
                            <fa:IconImage Icon="Xmark" 
                                          Height="10"
                                          Foreground="White"/>
                        </Button>


                        <Button x:Name="btnMinimize"
                                BorderThickness="0"
                                Click="btnMinimize_Click"
                                Style="{StaticResource windowControlButton}"
                                Tag="{StaticResource minimizeWindowControlColor}"
                                Margin="0,0,5,0">           
                            <fa:IconImage Icon="Minus" 
                                          Width="10"
                                          Foreground="White"/>
                        </Button>

                        <Button x:Name="btnMaximize"
                                BorderThickness="0"
                                Click="btnMaximize_Click"
                                Tag="{StaticResource maximizeWindowControlColor}"
                                Style="{StaticResource windowControlButton}">
                            <fa:IconImage Icon="WindowMaximize"
                                          Height="10"
                                          Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
        </Grid>
        
    </Border>
</Window>
